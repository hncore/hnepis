    "vue3-toastify": "^0.2.3"
  },
  "devDependencies": {
    "@babel/core": "^7.22.9",
    "@babel/preset-env": "^7.22.9",
    "@roots/browserslist-config": "^6.23.3",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "babel-loader": "^9.1.4",
